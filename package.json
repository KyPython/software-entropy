{
  "name": "software-entropy",
  "version": "1.0.0",
  "description": "A code-smell detection CLI tool that scans repositories for common issues",
  "main": "dist/cli.js",
  "bin": {
    "software-entropy": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "quality:check": "software-entropy .",
    "quality:check:incremental": "software-entropy . --incremental",
    "quality:check:ci": "software-entropy . --ci",
    "quality:baseline": "software-entropy . --save-baseline .code-quality-baseline.json",
    "quality:compare": "software-entropy . --baseline .code-quality-baseline.json"
  },
  "keywords": [
    "code-smell",
    "static-analysis",
    "code-quality",
    "cli",
    "linter",
    "code-analysis",
    "technical-debt"
  ],
  "author": "KyPython",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KyPython/software-entropy.git"
  },
  "bugs": {
    "url": "https://github.com/KyPython/software-entropy/issues"
  },
  "homepage": "https://github.com/KyPython/software-entropy#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}

