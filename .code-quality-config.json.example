{
  "rules": {
    "long-function": {
      "enabled": true,
      "maxLines": 50
    },
    "large-file": {
      "enabled": true,
      "maxLines": 500
    },
    "todo-fixme-density": {
      "enabled": true,
      "maxDensity": 5
    },
    "duplicate-code": {
      "enabled": true,
      "minLines": 5,
      "similarityThreshold": 0.8
    },
    "cyclomatic-complexity": {
      "enabled": true,
      "maxComplexity": 10
    },
    "magic-number": {
      "enabled": true
    },
    "dead-code": {
      "enabled": true
    },
    "nested-conditional": {
      "enabled": true,
      "maxDepth": 3
    },
    "hardcoded-secret": {
      "enabled": true
    },
    "sql-injection": {
      "enabled": true
    },
    "xss": {
      "enabled": true
    }
  },
  "include": [
    "**/*.{js,ts,jsx,tsx,py,java,cpp,c,cc,h,hpp}"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**"
  ],
  "baseline": {
    "enabled": true,
    "file": ".code-quality-baseline.json"
  },
  "ci": {
    "annotations": true,
    "failOnHigh": true,
    "failOnMedium": false
  },
  "metrics": {
    "enabled": false,
    "format": "prometheus",
    "output": "metrics.prom"
  }
}

